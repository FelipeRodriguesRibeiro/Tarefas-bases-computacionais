      "source": [
        "N=10000\n",
        "NC = 0\n",
        "\n",
        "for i in range (10000):\n",
        " x = rng.uniform(size = 1)\n",
        " y =rng.uniform(size = 1)\n",
        " d = np.sqrt((x - 0.5)**2 + (y-0.5)**2)\n",
        " if d < 0.5:\n",
        "  NC = NC + 1\n",
        "\n",
        "pi = 4*(NC/N)\n",
        "\n",
        "print(pi)"
